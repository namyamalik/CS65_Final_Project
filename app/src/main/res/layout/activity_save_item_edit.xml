<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SaveItemActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!--
    Item name heading
    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:text="Item Name"
        android:textSize="20sp"
        android:textStyle="bold" /> -->

    <!-- Item name edit text-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/ItemNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Item Name"
            android:inputType="textPersonName"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/MicViewItemName"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_mic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- date -->
        <TextView
            android:id="@+id/ItemDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            android:textSize="12sp"
            android:layout_marginStart="60sp" />

        <!-- time -->
        <TextView
            android:id="@+id/ItemTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            android:textSize="12sp" />
    </LinearLayout>

    <!--
    Item location heading
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Location"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="20dp" /> -->

    <!-- item location text -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/ItemLocalisationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Where is this item?"
            android:inputType="text"
            android:paddingTop="40dp"
            android:paddingBottom="10dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/MicViewItemLoc"
            android:layout_marginTop="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_mic" />
    </LinearLayout>

    <!-- item location picture image view and change button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/ItemPicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="30dp"
            android:padding="5dp"
            android:src="@drawable/default_item_location_pic" />

        <Button
            android:id="@+id/ChangeImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE IMAGE"/>

    </LinearLayout>

    <Button
        android:id="@+id/MapButton"
        android:layout_width="106dp"
        android:layout_height="58dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="53dp"
        android:text="SEE MAP" />

</LinearLayout>
